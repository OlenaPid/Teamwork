@model SVTrade.Models.Product


<div class="col-sm-4 col-lg-4 col-md-4 col-xs-4">
    <div class="product-image-wrapper">
        <div class="single-products">
            <div class="productinfo text-center">
                <img src="images/home/product1.jpg" alt="@Model.title" />
                <h2>@Model.price грн/кг</h2>
                <p>@Model.title</p>
                <p><strong>Категорія : @Model.ProductCategory.name</strong> </p>
                
                @using (Html.BeginForm("AddToCart", "Mapping"))
                {
                    @Html.HiddenFor(x=>x.productID)
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                    @*@<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>В Кошик</a>*@
                    <button type="submit" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"> В Кошик</i></button>
                }
            </div>
            <div class="product-overlay">
                <div class="overlay-content">
                    <h2>@Model.price грн/кг</h2>
                    <p><strong style="color:black">В наявності: </strong>@Model.amount кг</p>
                    <p><strong style="color:black">Опис:</strong> @Model.description</p>
                    <!-- Button trigger modal -->
                   @* <button class="btn btn-default add-to-cart" data-toggle="modal" data-target="#myModal">
                            <i class="fa fa-shopping-cart"></i>В Кошик
                        </button>*@
                    @using (Html.BeginForm("AddToCart", "Mapping"))
                    {
                        @Html.HiddenFor(x => x.productID)
                        @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                        <button type="submit" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"> В Кошик</i></button>
                    }

                </div>
            </div>
        </div>
