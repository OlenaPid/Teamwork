                        <div class="col-sm-9 col-lg-9 col-md-9 padding-right">
                            <div class="features_items">
                                <!--features_items-->
                                <h2 class="title text-center">Пропозиції</h2>
                                @{
                                    foreach (var p in (IEnumerable<SVTrade.Models.Product>)ViewData["Product"])
                                    {
                                        Html.RenderPartial("MappingProduct", p);
                                    }
                                }

                            </div><!--features_items-->


                        </div>
                    </div>
            </section>

            <!-- Modal -->
            <div class="modal  fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title" id="myModalLabel"><i class="fa fa-shopping-cart"></i> Кошик</h4>
                        </div>
                        <div class="modal-body">
                            <div class="table-responsive cart_info">
                                <table class="table table-condensed" width="90%" align="center">
                                    <thead>
                                        <tr class="cart_menu">
                                            <td class="image">Товар</td>
                                            <td class="description"></td>
                                            <td class="price">Ціна грн/кг</td>
                                            <td class="quantity">Кількість</td>
                                            <td class="total">Cума</td>
                                            <td></td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{

                                            foreach (var p in Model.Cart.Lines)
                                            {
                                                <tr>
                                                    <td class="cart_product">
                                                        <a href=""><img src="@p.Product.imageURL" alt=""></a>
                                                    </td>
                                                    <td class="cart_description">
                                                        <h4>@p.Product.title</h4>
                                                        <p>Артикул: @p.Product.productID</p>
                                                    </td>
                                                    <td class="cart_price">
                                                        <p>@p.Product.price </p>
                                                    </td>
                                                    <td class="cart_quantity">
                                                        <div class="cart_quantity_button">
                                                            @*<a class="cart_quantity_up" href=""> + </a>*@
                                                            <input class="cart_quantity_input" type="text" name="quantity" value="@p.Quantity" autocomplete="off" size="2">
                                                            @*<a class="cart_quantity_down" href=""> - </a>*@
                                                        </div>
                                                    </td>
                                                    <td class="cart_total">
                                                        <p class="cart_total_price">@(p.Quantity * p.Product.price)</p>
                                                    </td>
                                                    <td class="cart_delete">
                                                        @using (Html.BeginForm("RemoveFromCart", "Mapping"))
                                                        {
                                                            @Html.Hidden("ProductId", p.Product.productID)
                                                            @Html.HiddenFor(x => x.ReturnUrl)
                                                            <button class="actionButtons cart_quantity_delete" type="submit"><i class="fa fa-times"></i></button>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td>
                                                <a href="@Model.ReturnUrl" class="btn btn-info">Продовжити покупки</a>

                                            </td>
                                            <td>
                                                <p align="center" class="ui-button-icon-secondary">
                                                    @using (Html.BeginForm("AddToOrder", "Mapping"))
                                                    {
                                                        @Html.HiddenFor(x => x.ReturnUrl)
                                                        <div class="idf"><input value="Підтвердити Замовлення" type="submit" class="logs btn btn-info aSize"></div>

                                                    }
                                                </p>
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                        </div>
                    </div>
                </div>
            </div>


            <script src="~/Areas/MappingProducts/Scripts/js/jquery.js"></script>
            <script src="~/Areas/MappingProducts/Scripts/js/bootstrap.min.js"></script>
            <script src="~/Areas/MappingProducts/Scripts/js/jquery.scrollUp.min.js"></script>
            <script src="~/Areas/MappingProducts/Scripts/js/price-range.js"></script>
            <script src="~/Areas/MappingProducts/Scripts/js/jquery.prettyPhoto.js"></script>
            <script src="~/Areas/MappingProducts/Scripts/js/main.js"></script>
</body>
