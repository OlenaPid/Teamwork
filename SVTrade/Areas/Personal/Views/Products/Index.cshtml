@model IEnumerable<SVTrade.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Personal/Views/Shared/_Layout.cshtml";
}

<h2>Продукти</h2>

<p>
    @Html.ActionLink("Додати", "Create", new {area="Personal"}, new { @class = "btn btn-default get" })
</p>
<table class="table">
    <tr>
        <th>
           Назва
        </th>
      
        <th>
           Кількість (кг)
        </th>
        <th>
          Ціна (грн/кг)
        </th>
        <th>
           Підтверджено
        </th>
        <th>
           Категорія
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.approved)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductCategory.name)
        </td>
     
        <td>
        @Html.ActionLink("Редагувати", "Edit", new { id = item.productID })
        @Html.ActionLink("Деталі", "Details", new { id = item.productID })
        @Html.ActionLink("Видалити", "Delete", new { id = item.productID })
           
        </td>
    </tr>
}

</table>
